<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.burstingbrains.pocketmonsters"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DefaultAndroidActivity"
            android:label="@string/app_launcher_text" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name=".MainMenuActivity" android:configChanges="orientation"/>
		<activity android:name=".GameActivity" android:configChanges="orientation"/>
		
    </application>
    
    

</manifest>